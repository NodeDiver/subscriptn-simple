# BTCPay Server Configuration
# Replace these with your actual BTCPay Server details
BTCPAY_HOST=https://your-btcpay-server.com
BTCPAY_API_KEY=your_btcpay_api_key_here

# Demo Credentials (optional - for development only)
DEMO_PROVIDER_USERNAME=btcpayserver
DEMO_PROVIDER_PASSWORD=btcpayserver
DEMO_SHOP_OWNER_USERNAME=shopowner
DEMO_SHOP_OWNER_PASSWORD=shopowner

# PostgreSQL Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/subscriptn?schema=public"

# Security (for production)
# JWT_SECRET=your-jwt-secret-key
SESSION_SECRET=your_session_secret_here

# NWC Encryption Key (CRITICAL: Must be at least 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
NWC_ENCRYPTION_KEY=your_32_character_minimum_nwc_encryption_key_here

# NWC Security Configuration (Optional)
# NWC_SECURITY_SECRET=your_nwc_security_secret_here

# Webhook Configuration
# WEBHOOK_SECRET=your-webhook-secret

# ZapPlanner Integration
# ZAPPLANNER_API_KEY=your-zapplanner-api-key 